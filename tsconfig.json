{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": ".",
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", // Ensure node module resolution
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // Updated for React
    "incremental": true,
    "outDir": "dist",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "types": ["vitest/globals"],
  "exclude": [
    "node_modules",
    "src/test-setup.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "tests/**/*",
    "vite.config.ts"
  ]
}
